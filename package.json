{
  "name": "perde-hesaplama",
  "version": "2.0.0",
  "description": "Profesyonel Perde Hesaplama ve Analiz Sistemi - Tengra Works tarafından geliştirildi",
  "main": "main.js",
  "author": "Tengra Works",
  "license": "MIT",
  "homepage": "https://tengraworks.com",
  "repository": {
    "type": "git",
    "url": "https://github.com/tengra-works/perde-hesaplama.git"
  },
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:mac": "electron-builder --mac",
    "build:win": "electron-builder --win",
    "build:linux": "electron-builder --linux",
    "dist": "electron-builder --publish=never",
    "pack": "electron-builder --dir",
    "migrate": "node migrate-data.js",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "perde",
    "hesaplayıcı",
    "desktop",
    "electron",
    "tengra-works"
  ],
  "build": {
    "appId": "com.tengraworks.perde-hesaplama",
    "productName": "Perde Hesaplama",
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "files": [
      "main.js",
      "preload.js",
      "index.html",
      "renderer.js",
      "src/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "mac": {
      "category": "public.app-category.business",
      "target": "dmg",
      "icon": "src/assets/images/icon.icns",
      "bundleShortVersion": "2.0.0",
      "bundleVersion": "2.0.0",
      "extendInfo": {
        "CFBundleDisplayName": "Perde Hesaplama",
        "CFBundleName": "Perde Hesaplama"
      }
    },
    "win": {
      "target": "nsis",
      "icon": "src/assets/images/icon.ico"
    },
    "linux": {
      "target": "AppImage",
      "category": "Office"
    }
  },
  "type": "commonjs",
  "dependencies": {
    "sqlite3": "^5.1.6"
  },
  "devDependencies": {
    "electron": "^37.2.3",
    "electron-builder": "^24.13.3"
  }
}
